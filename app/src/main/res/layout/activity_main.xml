<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="where.example.com.popbus.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/background_package">


        <View
            android:id="@+id/Logo_Background"
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="230%"
            android:background="#9b0853">
        </View>

        <ImageView
            android:id="@+id/Logo"
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="230%"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo">
        </ImageView>

    </android.support.percent.PercentRelativeLayout >

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabPadding="10dp"
        app:tabTextColor="#CC9b0853"
        app:tabSelectedTextColor="#9b0853"
        app:tabGravity="fill"/>


<android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

</LinearLayout>
